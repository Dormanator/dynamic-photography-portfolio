<% include ../partials/header %>

<div class='container main'>

    <div class="row">

        <div class="col-sm-12 text-center">
            <h1>Add New Photo</h1>
        </div>
        
        <div class="col-md-4 offset-md-4 mt-4">
            <form action="/photos" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="photo[title]" placeholder="image title">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" id="image" type="file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="photo[alt]" placeholder="image alt text">
                </div>
                <div class="form-group">
                <label for="photo-tag">Category</label>
                    <select class="form-control" name="photo[tag]" id="photo-tag">
                        <option value="people">People</option>
                        <option value="places">Places</option>
                        <option value="things">Things</option>
                        <option value="animals">Animals</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-dark btn-block">Submit</button>
                </div>
            </form>
            <a href="/photos" class="return-link">&lsaquo; Go back</a>
        </div>

    </div>

</div>

<% include ../partials/footer %>
